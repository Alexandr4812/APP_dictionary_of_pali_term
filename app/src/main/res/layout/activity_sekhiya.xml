<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_main_color"
    tools:context=".SekhiyaActivity">

    <ImageButton
        android:id="@+id/backButtonRules"
        android:layout_width="107dp"
        android:layout_height="63dp"
        android:layout_marginBottom="16dp"
        android:background="@color/my_main_color"
        android:contentDescription="возврат в главное меню"
        android:src="@drawable/button_back"
        android:onClick="toRulesSamaneraAct"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="UsingOnClickInXml" />

    <ScrollView
        android:id="@+id/viewScrollSekhiya"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/backButtonRules"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayoutScrollSekhiya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewFirstCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="@string/first_category"
                android:textAlignment="center"
                android:textColor="#FFE082"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_sekhiya_1"
                style="@style/button_activity_declomation_main"
                android:text="@string/clothing_wrapped_around_body" />
            <Button
                android:id="@+id/button_sekhiya_2"
                style="@style/button_activity_declomation_main"
                android:text="@string/sit_in_wheel_clothing" />
            <Button
                android:id="@+id/button_sekhiya_3"
                style="@style/button_activity_declomation_main"
                android:text="@string/sit_strong" />
            <Button
                android:id="@+id/button_sekhiya_4"
                style="@style/button_activity_declomation_main"
                android:text="@string/eyes_looking_doun" />
            <Button
                android:id="@+id/button_sekhiya_5"
                style="@style/button_activity_declomation_main"
                android:text="@string/dont_up_clothes" />
            <Button
                android:id="@+id/button_sekhiya_6"
                style="@style/button_activity_declomation_main"
                android:text="@string/laughing_noisily" />
            <Button
                android:id="@+id/button_sekhiya_7"
                style="@style/button_activity_declomation_main"
                android:text="@string/speak_noisily" />
            <Button
                android:id="@+id/button_sekhiya_15_16"
                style="@style/button_activity_declomation_main"
                android:text="@string/uncoiling_the_body" />
            <Button
                android:id="@+id/button_sekhiya_16_17"
                style="@style/button_activity_declomation_main"
                android:text="@string/uncoiling_the_urms" />
            <Button
                android:id="@+id/button_sekhiya_17_18"
                style="@style/button_activity_declomation_main"
                android:text="@string/uncoiling_the_head" />
            <Button
                android:id="@+id/button_sekhiya_18_19"
                style="@style/button_activity_declomation_main"
                android:text="@string/hands_on_sides" />
            <Button
                android:id="@+id/button_sekhiya_23_24"
                style="@style/button_activity_declomation_main"
                android:text="@string/covered_head" />
            <Button
                android:id="@+id/button_sekhiya_25_26"
                style="@style/button_activity_declomation_main"
                android:text="@string/walc_on_heels" />
            <Button
                android:id="@+id/button_sekhiya_27_28"
                style="@style/button_activity_declomation_main"
                android:text="@string/hugging_knees" />

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>