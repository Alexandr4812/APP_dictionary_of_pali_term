<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_main_color"
    tools:context="com.dhammamobile.dictionary_of_pali_term.Declomation.DeclomationParittaActivity">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="51dp"
        android:layout_height="39dp"
        android:layout_marginBottom="10dp"
        android:background="@color/my_main_color"
        android:contentDescription="возврат в главное меню"
        android:onClick="toDeclomation"
        android:scaleType="centerInside"
        android:src="@drawable/button_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="UsingOnClickInXml" />

    <ImageButton
        android:id="@+id/imageButtonliveHome"
        android:layout_width="51dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@color/my_main_color"
        android:foregroundGravity="center"
        android:onClick="toMainAct"
        android:scaleType="centerInside"
        android:src="@drawable/button_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/viewScrollParitta"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayoutScrollParitta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                style="@style/imageViewRazdelitelKnopok"
                tools:ignore="ContentDescription" />
            <Button
                android:id="@+id/button_paritta_angulimala"
                style="@style/button_activity_declomation_main"
                android:onClick="angulimalaParitta"
                android:text="@string/buttonMainParittasAngulimala"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:id="@+id/button_paritta"
                style="@style/button_activity_declomation_main"
                android:onClick="moraParitta"
                android:text="@string/button_mora_paritta"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:id="@+id/infoButtonGirimananda"
                style="@style/infoButton"
                android:foreground="@drawable/info7"
                android:onClick="onButtonClickParittaGirimananda"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:id="@+id/button_paritta_girimananda"
                style="@style/button_activity_declomation_main"
                android:onClick="girimanandaParitta"
                android:text="@string/button_girimananda"
                tools:ignore="UsingOnClickInXml" />

            <TextView
                android:id="@+id/textViewParittaGirimananda"
                style="@style/TextMessageStyleAbhidyamma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="invisible"/>

            <Button
                android:id="@+id/infoButtonKhanda"
                style="@style/infoButton"
                android:foreground="@drawable/info7"
                android:onClick="onButtonClickParittaKhanda"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:id="@+id/button_paritta_khanda"
                style="@style/button_activity_declomation_main"
                android:onClick="khandaParitta"
                android:text="@string/button_khanda"
                tools:ignore="UsingOnClickInXml" />

            <TextView
                android:id="@+id/textViewParittaKhanda"
                style="@style/TextMessageStyleAbhidyamma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="invisible"/>

        </LinearLayout>
    </ScrollView>

    <WebView
        android:id="@+id/webViewParittas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:visibility="invisible"
        android:scrollbarThumbVertical="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Включаем макет с кнопками -->
    <include
        layout="@layout/buttons_layout_for_parittas"
        />

</androidx.constraintlayout.widget.ConstraintLayout>