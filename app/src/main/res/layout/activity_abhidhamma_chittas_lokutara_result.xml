<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_main_color"
    tools:context=".Abhidhamma.AbhidhammaChittasLokutaraResultActivity">

  <ImageButton
      android:id="@+id/backButton"
      android:layout_width="51dp"
      android:layout_height="39dp"
      android:layout_marginBottom="10dp"
      android:background="@color/my_main_color"
      android:contentDescription="возврат в главное меню"
      android:onClick="toAbhidhammaChittasLokutara"
      android:scaleType="centerInside"
      android:src="@drawable/button_back"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0"
      tools:ignore="UsingOnClickInXml" />

  <ImageButton
      android:id="@+id/imageButtonliveHome"
      android:layout_width="51dp"
      android:layout_height="39dp"
      android:layout_gravity="center"
      android:layout_marginBottom="10dp"
      android:background="@color/my_main_color"
      android:foregroundGravity="center"
      android:onClick="toMainAct"
      android:scaleType="centerInside"
      android:src="@drawable/button_home"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.1"
      app:layout_constraintStart_toStartOf="parent"
      tools:ignore="UsingOnClickInXml" />

  <ScrollView
      android:id="@+id/viewScrollAbhidhammaChittasLokutaraResult"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginBottom="10dp"
      app:layout_constraintBottom_toTopOf="@+id/backButton"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/linearLayoutScrollAbhidhammaChittasLokutaraResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <ImageView
          android:id="@+id/imageVievAbhidhamma1"
          style="@style/imageViewRazdelitelKnopok"
          tools:ignore="ContentDescription" />

      <TextView
          android:id="@+id/textViewRupavacaraLokutaraZagolovok"
          style="@style/textBetweenButtons"
          android:text="@string/forTextViewZagolovokLokutaraResult" />

      <Button
          android:id="@+id/button_abhidhamma_lokutara_result1"
          style="@style/button_activity_declomation_main"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/textButton1LokutaraResult"
          tools:ignore="UsingOnClickInXml"
          android:onClick="onButtonClickAbhidhammaLokutaraResultGroup1" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:layout_marginBottom="-5dp"
          tools:ignore="UselessLeaf" >

        <Button
            android:id="@+id/button_abhidhamma_chittas_lokutara_result_koren1"
            style="@style/button_activity_chetasika"
            android:layout_weight="1"
            android:onClick="onButtonClickAbhidhammaLokutaraResultGroup1"
            android:text="@string/textButtonLobhamulachittaKoren"
            android:textSize="14sp"
            tools:ignore="UsingOnClickInXml" />
        <Button
            android:id="@+id/button_abhidhamma_chittas_lokutara_result_funkciya1"
            style="@style/button_activity_chetasika"
            android:layout_weight="1"
            android:onClick="onButtonClickAbhidhammaLokutaraResultGroup1"
            android:text="@string/textButtonLobhamulachittaFunkciya"
            android:textSize="14sp"
            tools:ignore="UsingOnClickInXml" />
      </LinearLayout>
      <Button
          android:id="@+id/button_abhidhamma_chittas_lokutara_result_kombinaciya1"
          style="@style/button_activity_chetasika_kombinaciya"
          android:onClick="onButtonClickAbhidhammaLokutaraResultGroup1"
          android:text="@string/textButtonDosamulachittaKombinaciya" />

      <TextView
          android:id="@+id/textView_abhidhamma_lokutara_result1"
          style="@style/TextMessageStyleAbhidyamma"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text=""
          android:visibility="invisible"/>

      <Button
          android:id="@+id/button_abhidhamma_lokutara_result2"
          style="@style/button_activity_declomation_main"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/textButton2LokutaraResult"
          tools:ignore="UsingOnClickInXml"
          android:onClick="onButtonClickAbhidhammaLokutaraResultGroup2" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:layout_marginBottom="-5dp"
          tools:ignore="UselessLeaf" >

        <Button
            android:id="@+id/button_abhidhamma_chittas_lokutara_result_koren2"
            style="@style/button_activity_chetasika"
            android:layout_weight="1"
            android:onClick="onButtonClickAbhidhammaLokutaraResultGroup2"
            android:text="@string/textButtonLobhamulachittaKoren"
            android:textSize="14sp"
            tools:ignore="UsingOnClickInXml" />
        <Button
            android:id="@+id/button_abhidhamma_chittas_lokutara_result_funkciya2"
            style="@style/button_activity_chetasika"
            android:layout_weight="1"
            android:onClick="onButtonClickAbhidhammaLokutaraResultGroup2"
            android:text="@string/textButtonLobhamulachittaFunkciya"
            android:textSize="14sp"
            tools:ignore="UsingOnClickInXml" />
      </LinearLayout>
      <Button
          android:id="@+id/button_abhidhamma_chittas_lokutara_result_kombinaciya2"
          style="@style/button_activity_chetasika_kombinaciya"
          android:onClick="onButtonClickAbhidhammaLokutaraResultGroup2"
          android:text="@string/textButtonDosamulachittaKombinaciya" />

      <TextView
          android:id="@+id/textView_abhidhamma_lokutara_result2"
          style="@style/TextMessageStyleAbhidyamma"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text=""
          android:visibility="invisible"/>

      <Button
          android:id="@+id/button_abhidhamma_lokutara_result3"
          style="@style/button_activity_declomation_main"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/textButton3LokutaraResult"
          tools:ignore="UsingOnClickInXml"
          android:onClick="onButtonClickAbhidhammaLokutaraResultGroup3" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:layout_marginBottom="-5dp"
          tools:ignore="UselessLeaf" >

        <Button
            android:id="@+id/button_abhidhamma_chittas_lokutara_result_koren3"
            style="@style/button_activity_chetasika"
            android:layout_weight="1"
            android:onClick="onButtonClickAbhidhammaLokutaraResultGroup3"
            android:text="@string/textButtonLobhamulachittaKoren"
            android:textSize="14sp"
            tools:ignore="UsingOnClickInXml" />
        <Button
            android:id="@+id/button_abhidhamma_chittas_lokutara_result_funkciya3"
            style="@style/button_activity_chetasika"
            android:layout_weight="1"
            android:onClick="onButtonClickAbhidhammaLokutaraResultGroup3"
            android:text="@string/textButtonLobhamulachittaFunkciya"
            android:textSize="14sp"
            tools:ignore="UsingOnClickInXml" />
      </LinearLayout>
      <Button
          android:id="@+id/button_abhidhamma_chittas_lokutara_result_kombinaciya3"
          style="@style/button_activity_chetasika_kombinaciya"
          android:onClick="onButtonClickAbhidhammaLokutaraResultGroup3"
          android:text="@string/textButtonDosamulachittaKombinaciya" />

      <TextView
          android:id="@+id/textView_abhidhamma_lokutara_result3"
          style="@style/TextMessageStyleAbhidyamma"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text=""
          android:visibility="invisible"/>

      <Button
          android:id="@+id/button_abhidhamma_lokutara_result4"
          style="@style/button_activity_declomation_main"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/textButton4LokutaraResult"
          tools:ignore="UsingOnClickInXml"
          android:onClick="onButtonClickAbhidhammaLokutaraResultGroup4" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:layout_marginBottom="-5dp"
          tools:ignore="UselessLeaf" >

        <Button
            android:id="@+id/button_abhidhamma_chittas_lokutara_result_koren4"
            style="@style/button_activity_chetasika"
            android:layout_weight="1"
            android:onClick="onButtonClickAbhidhammaLokutaraResultGroup4"
            android:text="@string/textButtonLobhamulachittaKoren"
            android:textSize="14sp"
            tools:ignore="UsingOnClickInXml" />
        <Button
            android:id="@+id/button_abhidhamma_chittas_lokutara_result_funkciya4"
            style="@style/button_activity_chetasika"
            android:layout_weight="1"
            android:onClick="onButtonClickAbhidhammaLokutaraResultGroup4"
            android:text="@string/textButtonLobhamulachittaFunkciya"
            android:textSize="14sp"
            tools:ignore="UsingOnClickInXml" />
      </LinearLayout>
      <Button
          android:id="@+id/button_abhidhamma_chittas_lokutara_result_kombinaciya4"
          style="@style/button_activity_chetasika_kombinaciya"
          android:onClick="onButtonClickAbhidhammaLokutaraResultGroup4"
          android:text="@string/textButtonDosamulachittaKombinaciya" />

      <TextView
          android:id="@+id/textView_abhidhamma_lokutara_result4"
          style="@style/TextMessageStyleAbhidyamma"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text=""
          android:visibility="invisible"/>

      <Button
          android:id="@+id/button_abhidhamma_lokutara_result5"
          style="@style/button_activity_declomation_main"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/textButton5LokutaraResult"
          tools:ignore="UsingOnClickInXml"
          android:onClick="onButtonClickAbhidhammaLokutaraResultGroup5" />

    </LinearLayout>
  </ScrollView>

  <WebView
      android:id="@+id/webViewLokutaraResult"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="vertical"
      android:visibility="invisible"
      android:scrollbarThumbVertical="@android:color/holo_red_dark"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <!-- Включаем макет с кнопками -->
  <include
      layout="@layout/buttons_layout_for_live_buddha_new"
      />


  </androidx.constraintlayout.widget.ConstraintLayout>