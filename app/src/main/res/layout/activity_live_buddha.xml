<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_main_color"
    tools:context=".LiveBuddhaActivity">


    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="107dp"
        android:layout_height="63dp"
        android:layout_marginBottom="16dp"
        android:background="@color/my_main_color"
        android:contentDescription="возврат в главное меню"
        android:onClick="toMainAct"
        android:scaleType="centerInside"
        android:src="@drawable/button_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/viewScrollDeclomation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/asita"
                android:onClick="toSumedha"/>

            <TextView
                android:id="@+id/textViewToSumedha"
                style="@style/TextViewStyle"
                android:onClick="toSumedha"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1. Намерение Сумедхи"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_face" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/mahamaya_drim"
                android:onClick="toMaya"/>

            <TextView
                android:id="@+id/textViewToMaya"
                android:onClick="toMaya"
                style="@style/TextViewStyle"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="2. Сон Махамайи"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_face" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/birth_sidhartha" />

            <TextView
                android:id="@+id/textViewToBirth"
                style="@style/TextViewStyle"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="3. Рождение Сидхартхи"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_face" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/mudrec" />

            <TextView
                android:id="@+id/textViewToAsita"
                style="@style/TextViewStyle"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="4. Мудрец Асита"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_face" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/first_jhana" />

            <TextView
                android:id="@+id/textViewToJhana"
                style="@style/TextViewStyle"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="5. Первое достижение джханы"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_face" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/saving_swan" />

            <TextView
                android:id="@+id/textViewToSwalve"
                style="@style/TextViewStyle"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="6. Спасение лебедя"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_face" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/skills" />

            <TextView
                android:id="@+id/textViewToUmeniya"
                style="@style/TextViewStyle"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="7. Демонстрация умений"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_face" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/liveScrollText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFE082"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView9"
                style="@style/picsLiveBuddha"
                app:srcCompat="@drawable/asita" />

            <ImageButton
                android:id="@+id/backButtonLive0"
                android:layout_width="107dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:background="#FFE082"
                android:contentDescription="возврат в главное меню"
                android:foregroundGravity="center"
                android:onClick="tobackIzTextVLive"
                android:scaleType="centerInside"
                android:src="@drawable/button_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textViewSumedha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFE082"
                android:text="@string/sumedha"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textStyle="bold" />


            <ImageButton
                android:id="@+id/backButtonLive"
                android:layout_width="107dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:background="#FFE082"
                android:contentDescription="возврат в главное меню"
                android:foregroundGravity="center"
                android:onClick="tobackIzTextVLive"
                android:scaleType="centerInside"
                android:src="@drawable/button_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/liveScrollTextMaya"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFE082"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView10"
                style="@style/picsLiveBuddha"

                app:srcCompat="@drawable/mahamaya_drim" />

            <ImageButton
                android:id="@+id/backButtonMaya0"
                android:layout_width="107dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:background="#FFE082"
                android:contentDescription="возврат в главное меню"
                android:foregroundGravity="center"
                android:onClick="tobackIzTextVLive"
                android:scaleType="centerInside"
                android:src="@drawable/button_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textViewMaya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="#FFE082"
                android:foregroundGravity="left"
                android:gravity="left"
                android:text="@string/mahamaya"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/backButtonMaya"
                android:layout_width="107dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:background="#FFE082"
                android:contentDescription="возврат в главное меню"
                android:foregroundGravity="center"
                android:onClick="tobackIzTextVLive"
                android:scaleType="centerInside"
                android:src="@drawable/button_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>