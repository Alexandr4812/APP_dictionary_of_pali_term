<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_main_color"
    tools:context=".LiveBuddhaActivity">


    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="107dp"
        android:layout_height="63dp"
        android:layout_marginBottom="16dp"
        android:background="@color/my_main_color"
        android:contentDescription="возврат в главное меню"
        android:onClick="toMainAct"
        android:scaleType="centerInside"
        android:src="@drawable/button_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/viewScrollDeclomation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/asita" />

            <Button
                android:id="@+id/buttonLBSumedha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFE082"
                android:text="1. Намерение Сумедхи"
                android:textColor="#020202" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/mahamaya_drim" />

            <Button
                android:id="@+id/buttonLBMaya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFE082"
                android:text="2. Сон Махамайи"
                android:textColor="#020202" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/birth_sidhartha" />

            <Button
                android:id="@+id/buttonLBBirdh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFE082"
                android:text="3. Рождение Сидхартхи"
                android:textColor="#020202" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/mudrec" />

            <Button
                android:id="@+id/buttonLBAsita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFE082"
                android:text="4. Мудрец Асита"
                android:textColor="#020202" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/first_jhana" />

            <Button
                android:id="@+id/buttonLBJhana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFE082"
                android:text="5. Первое достижение джханы"
                android:textColor="#020202" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/saving_swan" />

            <Button
                android:id="@+id/buttonLBJSwan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFE082"
                android:text="6. Спасение лебедя"
                android:textColor="#020202" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/skills" />

            <Button
                android:id="@+id/buttonLBJSkills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFE082"
                android:text="7. Демонстрация умений"
                android:textColor="#020202" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>