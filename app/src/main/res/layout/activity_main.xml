<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_main_color"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView4"
        style="@style/TextViewStyle"
        android:text="Жизнеописание Будды"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_face" />

    <TextView
        android:id="@+id/textView3"
        style="@style/TextViewStyle"
        android:text="Строфы для декламаций"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_stupa" />

    <TextView
        android:id="@+id/textView2"
        style="@style/TextViewStyle"
        android:text="Короткие сутты"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_chakra" />

    <TextView
        android:id="@+id/textView"
        style="@style/TextViewStyle"
        android:text="Словарь палийских терминов"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_book" />

    <ImageButton
        android:id="@+id/button_face"
        style="@style/MainButtons"
        android:layout_marginTop="20dp"
        android:contentDescription="Описание жизни Будды"
        android:onClick="toLiveBu"
        android:src="@drawable/button_face"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageButton
        android:id="@+id/button_stupa"
        style="@style/MainButtons"
        android:layout_marginTop="20dp"
        android:contentDescription="Строфы для декломации"
        android:onClick="toDeclomation"
        android:src="@drawable/button_stupa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/button_chakra"
        style="@style/MainButtons"
        android:layout_marginTop="20dp"
        android:contentDescription="Короткие сутты"
        android:onClick="toSuttas"
        android:src="@drawable/button_chakra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageButton
        android:id="@+id/button_book"
        style="@style/MainButtons"
        android:layout_marginTop="64dp"
        android:contentDescription="Словарь терминов"
        android:onClick="toTermins"
        android:src="@drawable/button_book"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>