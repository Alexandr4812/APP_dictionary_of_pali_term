<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_main_color"
    tools:context=".RulesUpasampadaActivity">

    <ScrollView
        android:id="@+id/UpasampadaScrollText"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFE082"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/backButtonLive0"
                android:layout_width="51dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#FFE082"
                android:contentDescription="возврат в главное меню"
                android:foregroundGravity="center"
                android:onClick="toRulesBhikkhuAct"
                android:scaleType="centerInside"
                android:src="@drawable/button_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="UsingOnClickInXml" />

            <ImageButton
                android:id="@+id/imageButtonliveHome0"
                android:layout_width="51dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#FFE082"
                android:foregroundGravity="center"
                android:onClick="toMainAct"
                android:scaleType="centerInside"
                android:src="@drawable/button_home"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/textViewPabaja"
                style="@style/TextMessageStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="В разработке" />


            <ImageButton
                android:id="@+id/backButtonPabaja"
                android:layout_width="51dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#FFE082"
                android:contentDescription="возврат в главное меню"
                android:foregroundGravity="center"
                android:onClick="toRulesBhikkhuAct"
                android:scaleType="centerInside"
                android:src="@drawable/button_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="UsingOnClickInXml" />

            <ImageButton
                android:id="@+id/imageButtonliveHome"
                android:layout_width="51dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#FFE082"
                android:foregroundGravity="center"
                android:onClick="toMainAct"
                android:scaleType="centerInside"
                android:src="@drawable/button_home"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>