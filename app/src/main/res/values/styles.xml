        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:backgroundTint">@color/my_main_color</item>
        <item name="android:text">@string/buttonFastForward</item>
        <item name="android:textColor">@color/my_text_bacground_color</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:foregroundGravity">fill</item>
        <item name="android:scaleType">centerInside</item>
