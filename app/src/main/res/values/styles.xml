    <style name="infoButton">
        <item name="android:backgroundTint">@color/my_main_color</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:foregroundGravity">fill</item>
        <item name="android:foregroundTint">@color/roza</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:insetTop">6dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">6dp</item>
        <item name="android:insetRight">6dp</item>
