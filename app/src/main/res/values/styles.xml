<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="imageViewRazdelitelKnopok">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginBottom">9dp</item>
        <item name="android:foregroundGravity">center</item>
        <item name="srcCompat">@drawable/chakra_deer_color</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFF59D</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:shadowColor">#101012</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="TextMessageStyle">
        <item name="android:background">#FFE082</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="TextMessageStyleAbhidyamma">
        <item name="android:background">@color/my_main_color</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/my_text_bacground_color</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="MainButtons">
        <item name="android:layout_width">68dp</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@color/my_main_color</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="picsLiveBuddha">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">263dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="button_activity_declomation_main">
        <item name="android:backgroundTint">@color/my_text_bacground_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:insetTop">6dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">6dp</item>
        <item name="android:insetRight">6dp</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="button_activity_chetasika">
        <item name="android:backgroundTint">@color/roza</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">8sp</item>
