    </style>

    <style name="cardViewLiveBuddha">
        <item name="android:layout_width">242dp</item>
        <item name="android:layout_height">161dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="background">@color/black</item>
        <item name="backgroundTint">@color/black</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">2dp</item>
        <item name="cardBackgroundColor">@color/black</item>
    </style>
    
    <style name="textBetweenButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFE082</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>

    </style>
</resources>