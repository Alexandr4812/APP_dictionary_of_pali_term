<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFF59D</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:shadowColor">#101012</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="TextMessageStyle">
        <item name="android:background">#FFE082</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="MainButtons">
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">86dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@color/my_main_color</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="picsLiveBuddha">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">263dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="button_activity_declomation_main">
        <item name="android:backgroundTint">#FFE082</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:insetTop">6dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">6dp</item>
        <item name="android:insetRight">6dp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="buttonBackNotImageButton">
        <item name="android:layout_width">51dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:backgroundTint">@color/my_main_color</item>
        <item name="android:foreground">@mipmap/back_foreground</item>
        <item name="android:foregroundGravity">fill</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="buttonBackHomeNotImageButton">
        <item name="android:layout_width">51dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:backgroundTint">@color/my_main_color</item>
